<?xml version="1.0"?>
<project name="SimpleReminder" basedir="." default="build">

<target name="compile">
    <mkdir dir="out/classes" />
    <javac destdir="out/classes" source="1.7" target="1.7" failonerror="true">
        <src path="src" />
    </javac>
</target>

<target name="build">
    <mkdir dir="out/jar" />
    <antcall target="compile" />
    <jar destfile="out/jar/SimpleReminder.jar">
        <manifest>
            <attribute name="Main-Class" value="de.leostrakosch.reminder.cli.CLIReminder" />
        </manifest>
        <fileset dir="out/classes" />
    </jar>
</target>

<target name="clean">
    <delete dir="out" />
</target>
</project>
